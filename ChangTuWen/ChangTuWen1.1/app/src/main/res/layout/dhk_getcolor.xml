<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorDukBg">

    <TextView
        android:layout_height="wrap_content"
        android:text="选择颜色"
        android:gravity="center"
        android:textColor="@color/colorDukText"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:padding="10dp"/>

    <View
        android:layout_height="1dp"
        android:background="@color/colorDukView"
        android:layout_width="match_parent"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dhk_getcolor_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </FrameLayout>

    <View
        android:layout_height="1dp"
        android:background="@color/colorDukView"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dhk_getcolor_qd"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:textColor="@color/colorDukAnText"
            android:background="@drawable/dhk_annui"
            android:text="确定"
            android:gravity="center"
            android:textSize="16sp"/>

        <View
            android:layout_height="match_parent"
            android:background="@color/colorDukView"
            android:layout_width="1dp"/>

        <Button
            android:id="@+id/dhk_getcolor_qx"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:textColor="@color/colorDukAnText"
            android:background="@drawable/dhk_annui"
            android:text="取消"
            android:gravity="center"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>
