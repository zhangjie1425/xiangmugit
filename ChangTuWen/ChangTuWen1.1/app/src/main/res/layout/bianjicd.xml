<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@color/colorUiBg"
	android:orientation="vertical">

	<View
		android:layout_height="1dp"
		android:background="@color/colorUiView"
		android:layout_width="match_parent"/>

	<LinearLayout
		android:layout_height="50dp"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		
		android:layout_gravity="center">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:layout_weight="1.0"
			android:background="@drawable/anbj"
			android:id="@+id/bjtp"
			android:gravity="center">

			<ImageView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@mipmap/bjtp"
				/>
			<!--<ImageButton
				android:layout_height="25dp"
				android:layout_width="25dp"
				
				android:layout_gravity="center"
				android:src="@drawable/bjtpa"/>-->

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:layout_weight="1.0"
			android:background="@drawable/anbj"
			android:id="@+id/bjbq"
			android:gravity="center">

			<!--<ImageButton
				android:layout_height="25dp"
				android:layout_width="25dp"
				android:src="@drawable/bjbqa"
				android:layout_gravity="center"/>-->
			<ImageView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@mipmap/bjbq"
			/>
		</LinearLayout>
		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:layout_weight="1.0"
			android:background="@drawable/anbj"
			android:id="@+id/bjzt"
			android:gravity="center">

			<!--<ImageButton
				android:layout_height="25dp"
				android:layout_width="25dp"
				android:src="@drawable/bjtsa"
				android:layout_gravity="center"/>-->
			<ImageView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@mipmap/bjts"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:layout_weight="1.0"
			android:background="@drawable/anbj"
			android:id="@+id/bjwzsz"
			android:gravity="center">

			<!--<ImageButton
				android:layout_height="25dp"
				android:layout_width="25dp"
				android:src="@drawable/bjadda"
				android:layout_gravity="center"/>-->
			<ImageView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@mipmap/bjwzsz"
			/>
		</LinearLayout>



	</LinearLayout>

	<GridView
		android:id="@+id/bianji_faces"
		android:layout_width="fill_parent"
		android:layout_height="220dip"
		android:numColumns="auto_fit"
		android:columnWidth="50dip"
		android:stretchMode="columnWidth"
		android:gravity="center"
		android:fadingEdge="none"
		android:scrollingCache="false"
		android:visibility="gone"/>

	<LinearLayout
		android:layout_height="220dip"
		android:layout_width="match_parent"
		android:background="@color/colorBjZtBg"
		android:orientation="vertical"
		android:id="@+id/bianji_zt"
		android:visibility="gone"
		android:gravity="center">
		<TextView
			android:layout_width="match_parent"
			android:text="背景主题："
			android:layout_margin="10dp"
			android:layout_height="wrap_content"
			android:textColor="@color/colorBjText"

			android:textSize="15dp" />
		<Gallery
			android:id="@+id/bjxzzttp"
			android:background="@color/colorBjZtxzBg"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:gravity="center_vertical"
			android:spacing="16dp"/>
		<TextView
			android:layout_width="match_parent"
			android:text="文字颜色："
			android:layout_margin="10dp"
			android:layout_height="wrap_content"
			android:textColor="@color/colorBjText"

			android:textSize="15dp" />


	</LinearLayout>


	<LinearLayout
		android:layout_height="220dip"
		android:layout_width="match_parent"
		android:background="@color/colorBjZtBg"
		android:orientation="vertical"
		android:id="@+id/bianji_wz"
		android:visibility="gone"
		android:gravity="center">


		<TextView
			android:layout_width="match_parent"
			android:text="文字颜色："
			android:layout_margin="10dp"
			android:textColor="@color/colorBjText"

			android:layout_height="wrap_content"
			android:textSize="15dp" />
		<Button
			android:text="选择颜色"
			android:textSize="15dp"
			android:padding="5dp"
			android:id="@+id/bjxzwzys"
			android:layout_margin="10dp"
			android:textColor="@color/colorBjText"

			android:background="@drawable/menuan"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<TextView
			android:layout_width="match_parent"
			android:text="文字大小："
			android:layout_margin="10dp"
			android:textColor="@color/colorBjText"
			android:layout_height="wrap_content"
			android:textSize="15dp" />
		<SeekBar
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_margin="10dp"
			android:max="50"
			android:progress="18"
			android:layout_weight="1.0"
			android:id="@+id/bjwzdx"/>
	</LinearLayout>

